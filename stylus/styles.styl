*
	padding 0
	margin 0

html
	font-family verdana
	font-size 20px

main
	position absolute
	height 100%
	width 100%

p
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	font-size 1rem

#art-board
	position absolute
	top 0px
	left 0px
	width 100%
	height 100%

.cursor
	position absolute
	width 3px
	height 3px
